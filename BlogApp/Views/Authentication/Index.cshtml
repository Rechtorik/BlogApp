@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Login";
}

<div class="row d-flex justify-content-center align-items-center w-100 px-5 border">
    <div class="col-md-9 col-lg-6 col-xl-6 my-lg-5">
        <img src="images/undraw_fingerprint-login_19qv.svg" class="img-fluid" alt="Login image">
    </div>
    <div class="col-md-8 col-lg-6 col-xl-5 offset-xl-1  py-lg-5">
    <h1 class="mb-5">Blogs app</h1>
        <form method="post" asp-controller="Authentication" asp-action="Login">
            <!-- Login input -->
            <div data-mdb-input-init="" class="form-outline mb-4" data-mdb-input-initialized="true">
                <input type="text" id="form3Example3" class="form-control form-control-lg" name="login" placeholder="Login">
                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div>
                <div class="form-notch-middle" style="width: 88.8px;"></div><div class="form-notch-trailing"></div></div>
            </div>

            <!-- Password input -->
            <div data-mdb-input-init="" class="form-outline mb-3" data-mdb-input-initialized="true">
                <input type="password" id="form3Example4" class="form-control form-control-lg" name="password" placeholder="Password">
                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 64px;"></div><div class="form-notch-trailing"></div></div>
            </div>

            <div class="text-center text-lg-start mt-4 pt-2">
                <button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;" data-mdb-button-initialized="true">Login</button>
                <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a asp-controller="Authentication" asp-action="Register">Register</a></p>
            </div>

        </form>
    </div>
</div>